<%- include('../partials/header', { 
  title: dadosPessoais.nome_completo + ' | Portfólio',
  description: dadosPessoais.titulo_header
}) %>

<%- include('../partials/nav') %>

<main class="container my-5">
  <section class="hero-section text-center py-5 my-4">
    <div class="avatar-container mx-auto mb-4">
      <img src="<%= dadosPessoais.imagem_avatar_url %>" 
           alt="<%= dadosPessoais.nome_completo %>" 
           class="avatar rounded-circle shadow-lg"
           width="150"
           height="150"
           loading="lazy">
    </div>
    
    <h1 class="display-4 fw-bold mb-3"><%= dadosPessoais.nome_completo %></h1>
    <p class="lead text-muted mb-4">
      <%= dadosPessoais.titulo_principal %><br>
      <small class="text-muted"><%= dadosPessoais.subtitulo %></small>
    </p>
    
    <div class="quote-box bg-light p-4 rounded-3 mb-4 mx-auto" style="max-width: 600px;">
      <blockquote class="mb-0 fs-5">
        "<%= dadosPessoais.citacao %>"
      </blockquote>
    </div>

    <div class="cta-buttons d-flex flex-wrap justify-content-center gap-3">
      <a href="/curriculo" class="btn btn-primary px-4 py-2">
        <i class="fas fa-file-alt me-2"></i>Ver Currículo
      </a>
      <a href="/projetos" class="btn btn-outline-primary px-4 py-2">
        <i class="fas fa-laptop-code me-2"></i>Meus Projetos
      </a>
    </div>
  </section>
</main>

<%- include('../partials/footer') %>