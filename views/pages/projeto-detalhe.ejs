<%- include('../partials/header', { pageTitle: projeto.titulo }) %>
<%- include('../partials/nav') %>

<main class="container py-5 mt-5">
  <article class="row g-5 align-items-start">
    <div class="col-lg-5">
      <img src="<%= projeto.imagem_url %>" alt="Demonstração do projeto <%= projeto.titulo %>" class="img-fluid rounded shadow-sm mb-4">
      <h3 class="h5 mb-3">Tecnologias Utilizadas</h3>
      <div class="d-flex flex-wrap gap-3 mb-4">
        <% if (projeto.tecnologias && projeto.tecnologias.length > 0) { %>
          <% projeto.tecnologias.forEach(tech => { %>
            <div class="tech-icon" title="<%= tech.nome %>">
              <img src="<%= tech.icone_url %>" alt="<%= tech.nome %>" style="height: 40px; width: 40px; object-fit: contain;">
            </div>
          <% }); %>
        <% } %>
      </div>
      <% if (projeto.link_repositorio) { %>
        <a href="<%= projeto.link_repositorio %>" class="btn btn-dark w-100" target="_blank" rel="noopener noreferrer">
          <i class="fab fa-github me-2"></i>Ver Repositório
        </a>
      <% } %>
    </div>
    <div class="col-lg-7">
      <h1 class="display-5 fw-bold mb-3"><%= projeto.titulo %></h1>
      <div class="project-content">
        <%- md.render(projeto.descricao_completa) %>
      </div>
      <a href="/projetos" class="btn btn-outline-secondary mt-4">
        <i class="fas fa-arrow-left me-2"></i>Voltar para Projetos
      </a>
    </div>
  </article>
</main>

<%- include('../partials/footer') %>