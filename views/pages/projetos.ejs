<%- include('../partials/header', { pageTitle: pageTitle }) %>
<%- include('../partials/nav') %>

<main class="container py-5 flex-grow-1">
  <h1 class="display-5 fw-bold mb-5 mt-5 text-center">Meus Projetos</h1>
  <div class="row g-4">
    <% if (projetos && projetos.length > 0) { %>
      <% projetos.forEach(projeto => { %>
        <div class="col-md-6 col-lg-4">
          <div class="card h-100 shadow-sm border-0 hover-shadow transition-all">
            <img src="<%= projeto.imagem_url %>" class="card-img-top" alt="Imagem do projeto <%= projeto.titulo %>" style="height: 200px; object-fit: cover;">
            <div class="card-body d-flex flex-column">
              <h3 class="h5 mb-2"><%= projeto.titulo %></h3>
              <p class="text-muted flex-grow-1"><%= projeto.descricao_curta %></p>
              <a href="/projetos/<%= projeto.slug %>" class="btn btn-sm btn-primary align-self-start mt-auto">
                Ver Detalhes <i class="fas fa-arrow-right ms-2"></i>
              </a>
            </div>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <p class="text-center">Nenhum projeto encontrado.</p>
    <% } %>
  </div>
</main>

<%- include('../partials/footer') %>